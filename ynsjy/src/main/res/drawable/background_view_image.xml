<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="true"><layer-list>
            <item><bitmap android:gravity="center" android:src="@drawable/touming" android:tileMode="repeat" />
            </item>
            <item><shape>
                    <gradient android:angle="270" android:endColor="#a0e0b071" android:startColor="#a0a67637" />

                    <stroke android:width="1dp" android:color="#5c3708" />

                    <corners android:radius="5dp" />
                </shape></item>
        </layer-list></item>
    <item android:drawable="@drawable/touming" android:state_enabled="true" android:state_pressed="false"></item>
    <item android:drawable="@drawable/touming" android:state_enabled="false"></item>
    <item android:drawable="@drawable/touming" android:state_enabled="true"></item>

</selector>