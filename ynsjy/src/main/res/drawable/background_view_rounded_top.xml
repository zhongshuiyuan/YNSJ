<?xml version="1.0" encoding="UTF-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="0.0px"
    android:insetRight="0.0px" >

    <selector>
        <item android:state_pressed="true">
            <shape>
                <gradient
                    android:angle="270.0"
                    android:endColor="#2578b8"
                    android:startColor="#2578b8" />

                <corners
                    android:bottomLeftRadius="0.0dip"
                    android:bottomRightRadius="0.0dip"
                    android:radius="0.0dip"
                    android:topLeftRadius="5.0dip"
                    android:topRightRadius="5.0dip" />
                
                <stroke 
                    android:width="1dp" 
                    android:color="#eededede" />
            </shape>
        </item>
        <item>
            <shape>
                <gradient
                    android:angle="270.0"
                    android:endColor="#2578b8"
                    android:startColor="#2578b8" />

                <corners
                    android:bottomLeftRadius="0.0dip"
                    android:bottomRightRadius="0.0dip"
                    android:radius="0.0dip"
                    android:topLeftRadius="11.0dip"
                    android:topRightRadius="11.0dip" />
                
                <stroke 
                    android:width="0dp" 
                    android:color="#eededede" />
            </shape>
        </item>
    </selector>

</inset>