<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_view_rounded_blue"
        android:gravity="left|center"
        android:padding="7dp"
        android:text="@string/searchresult"
        android:textColor="@color/white"
        android:textSize="@dimen/larger_txtsize20" />

    <ListView
        android:id="@+id/yd_data_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_view_rounded" />

</LinearLayout>