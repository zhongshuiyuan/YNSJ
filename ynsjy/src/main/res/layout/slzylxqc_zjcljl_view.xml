                    android:layout_height="wrap_content"
                    android:layout_above="@id/linear30"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/background_view_rounded"
                    android:divider="@null" >
                </ListView>
            </RelativeLayout>
        </LinearLayout>

