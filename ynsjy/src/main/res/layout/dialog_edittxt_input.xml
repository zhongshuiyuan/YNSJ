<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/background_view_rounded"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/background_view_rounded_blue"
        android:gravity="center"
        android:padding="13dp" >

        <TextView
            android:id="@+id/textView_two_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:background="@drawable/background_view_rounded_lightblue"
            android:gravity="center"
            android:padding="15dp"
            android:paddingLeft="5dp"
            android:text="@string/back"
            android:textColor="@android:color/white"
            android:textSize="@dimen/larger_txtsize20" />

        <TextView
            android:id="@+id/textView_two_alias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/larger_txtsize20" />

        <TextView
            android:id="@+id/textView_two_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@drawable/background_view_rounded_lightblue"
            android:gravity="center"
            android:padding="15dp"
            android:paddingLeft="5dp"
            android:text="@string/sure"
            android:textColor="@android:color/white"
            android:textSize="@dimen/larger_txtsize20" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            android:text="" />

        <EditText
            android:id="@+id/edittxt_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/background_edittxt"
            android:gravity="bottom"
            android:hint=""
            android:padding="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/textview_gszh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_view_rounded_blue"
        android:visibility="gone"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/zhuanhxshu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="15dp"
            android:text="转换为小数"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <TextView
            android:id="@+id/fhwdfmgs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="15dp"
            android:text="恢复为度分秒格式"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <com.titan.ynsjy.swipemenulistview.SwipeMenuListView
        android:id="@+id/listView_two_selectvalue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>