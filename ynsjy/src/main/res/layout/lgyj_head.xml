<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <com.otitan.slzy.statistics.InterceptScrollContainer
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:focusable="false" >

        <com.otitan.slzy.statistics.MyHScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView1"
                    style="@style/textTheme"
                    android:text="统计单位"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView2"
                    style="@style/textTheme"
                    android:text="乡镇"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView3"
                    style="@style/textTheme"
                    android:text="村、林班"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_bg"
                        android:gravity="center"
                        android:padding="6dp"
                        android:text="合计"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#ff747474" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/textView4"
                            style="@style/textTheme"
                            android:text="起数"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/textView5"
                            style="@style/textTheme"
                            android:layout_height="fill_parent"
                            android:text="面积"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_bg"
                        android:gravity="center"
                        android:padding="6dp"
                        android:text="1、国家级、省级重点项目"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#ff747474" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/textView6"
                            style="@style/textTheme"
                            android:text="起数"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/textView7"
                            style="@style/textTheme"
                            android:layout_height="fill_parent"
                            android:text="面积"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_bg"
                        android:gravity="center"
                        android:padding="6dp"
                        android:text="2、市（州）批准及招商引资项目"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#ff747474" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/textView8"
                            style="@style/textTheme"
                            android:text="起数"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/textView9"
                            style="@style/textTheme"
                            android:layout_height="fill_parent"
                            android:text="面积"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_bg"
                        android:gravity="center"
                        android:padding="6dp"
                        android:text="3、县（市、区、特区）批准的招商引资项目"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#ff747474" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/textView10"
                            style="@style/textTheme"
                            android:text="起数"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/textView11"
                            style="@style/textTheme"
                            android:layout_height="fill_parent"
                            android:text="面积"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_bg"
                        android:gravity="center"
                        android:padding="6dp"
                        android:text="4、各级各类园区内建设项目"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#ff747474" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/textView12"
                            style="@style/textTheme"
                            android:text="起数"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/textView13"
                            style="@style/textTheme"
                            android:layout_height="fill_parent"
                            android:text="面积"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_bg"
                        android:gravity="center"
                        android:padding="6dp"
                        android:text="5、采矿、采石采砂取土及其他项目"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#ff747474" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/textView14"
                            style="@style/textTheme"
                            android:text="起数"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/textView15"
                            style="@style/textTheme"
                            android:layout_height="fill_parent"
                            android:text="面积"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.otitan.slzy.statistics.MyHScrollView>
    </com.otitan.slzy.statistics.InterceptScrollContainer>

</RelativeLayout>