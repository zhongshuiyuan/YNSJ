<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="3dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:text="样木"
            android:background="#DCDCDC"
            android:textColor="#000000"
            android:textSize="@dimen/larger_txtsize20" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="立木"
            android:singleLine="true"
            android:background="@drawable/background_view_textview_selector"
            android:textColor="#000000"
            android:textSize="@dimen/larger_txtsize20" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:gravity="center"
            android:padding="5dp"
            android:background="@drawable/background_view_textview_selector"
            android:text="检尺"
            android:textColor="#000000"
            android:textSize="@dimen/larger_txtsize20" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:singleLine="true"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:background="@drawable/background_view_textview_selector"
            android:text="树种"
            android:textColor="#000000"
            android:textSize="@dimen/larger_txtsize20" />

        <TextView
            android:id="@+id/tv5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:singleLine="true"
            android:layout_weight="0.6"
            android:gravity="center"
            android:background="#DCDCDC"
            android:padding="5dp"
            android:text="前期"
            android:textColor="#000000"
            android:textSize="@dimen/larger_txtsize20" />

        <TextView
            android:id="@+id/tv6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:singleLine="true"
            android:layout_weight="0.6"
            android:background="@drawable/background_view_textview_selector"
            android:gravity="center"
            android:padding="5dp"
            android:text="本期"
            android:textColor="#000000"
            android:textSize="@dimen/larger_txtsize20" />

        <TextView
            android:id="@+id/tv7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:singleLine="true"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:background="@drawable/background_view_textview_selector"
            android:text="定位点"
            android:textColor="#000000"
            android:textSize="@dimen/larger_txtsize20" />

        <TextView
            android:id="@+id/tv8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:text="方位角"
            android:textColor="#000000"
            android:background="@drawable/background_view_textview_selector"
            android:textSize="@dimen/larger_txtsize20" />

        <TextView
            android:id="@+id/tv9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:singleLine="true"
            android:padding="5dp"
            android:text="水平距"
            android:background="@drawable/background_view_textview_selector"
            android:textColor="#000000"
            android:textSize="@dimen/larger_txtsize20" />

        <TextView
            android:id="@+id/tv10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="0.5"
            android:background="@drawable/background_view_textbutton_selector"
            android:gravity="center"
            android:singleLine="true"
            android:padding="5dp"
            android:text="删除"
            android:textColor="#000000"
            android:textSize="@dimen/larger_txtsize20" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="5dp"
        android:background="#000000" />

</LinearLayout>