<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:contentDescription="@null"
        android:padding="8dp"
        android:visibility="gone"
        android:src="@drawable/wb_feed_icon_gps" />

    <TextView
        android:id="@+id/id_group_txt"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:gravity="left|center"
        android:paddingLeft="7dp"
        android:textColor="@color/balck"
        android:textSize="16sp" />
    <Button
        android:id="@+id/layer_render_unique"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@drawable/background_view_rounded"
        android:focusable="false"
        android:gravity="center"
        android:padding="8dp"
        android:textSize="20sp"
        android:text="@string/unique_randersetting"
        android:textColor="@color/blue" />

    <Button
        android:id="@+id/layer_render_simple"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@drawable/background_view_rounded"
        android:focusable="false"
        android:gravity="center"
        android:padding="8dp"
        android:textSize="20sp"
        android:text="@string/simple_randersetting"
        android:textColor="@color/blue" />

</LinearLayout>