<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_view_rounded"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:gravity="center" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/edit"
            android:textColor="#ffffff"
            android:textSize="@dimen/larger_txtsize22" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:baselineAligned="false" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <LinearLayout
                        android:id="@+id/linear1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1.5"
                            android:gravity="right"
                            android:padding="7dp"
                            android:singleLine="true"
                            android:text="@string/xcry"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/larger_txtsize18" />

                        <EditText
                            android:id="@+id/swdyx_rcgl_xcry_edit"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="3"
                            android:background="@drawable/background_edittxt"
                            android:hint=""
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textSize="@dimen/larger_txtsize16" >

                            <requestFocus />
                        </EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/linear1"
                        android:layout_marginTop="15dp"
                        android:gravity="right" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1.5"
                            android:gravity="right"
                            android:padding="7dp"
                            android:singleLine="true"
                            android:text="@string/xcdd"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/larger_txtsize18" />

                        <EditText
                            android:id="@+id/swdyx_rcgl_xcdd_edit"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="3"
                            android:background="@drawable/background_edittxt"
                            android:hint=""
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textSize="@dimen/larger_txtsize16" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/linear2"
                        android:layout_marginTop="15dp"
                        android:gravity="right" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1.5"
                            android:gravity="right"
                            android:padding="7dp"
                            android:singleLine="true"
                            android:text="@string/cdrs"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/larger_txtsize18" />

                        <EditText
                            android:id="@+id/swdyx_rcgl_cdrc_edit"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="3"
                            android:background="@drawable/background_edittxt"
                            android:hint=""
                            android:inputType="number"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textSize="@dimen/larger_txtsize16" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/linear3"
                        android:layout_marginTop="15dp"
                        android:gravity="right" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1.5"
                            android:gravity="right"
                            android:padding="7dp"
                            android:singleLine="true"
                            android:text="@string/bxcdw"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/larger_txtsize18" />

                        <EditText
                            android:id="@+id/swdyx_rcgl_bxcdw_edit"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="3"
                            android:background="@drawable/background_edittxt"
                            android:hint=""
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textSize="@dimen/larger_txtsize16" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/linear4"
                        android:layout_marginTop="15dp"
                        android:gravity="right" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1.5"
                            android:gravity="right"
                            android:padding="7dp"
                            android:singleLine="true"
                            android:text="@string/jd"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/larger_txtsize18" />

                        <EditText
                            android:id="@+id/swdyx_rcgl_lon_edit"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="3"
                            android:background="@drawable/background_edittxt"
                            android:hint=""
                            android:inputType="numberDecimal"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textSize="@dimen/larger_txtsize16" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/linear5"
                        android:layout_marginTop="15dp"
                        android:gravity="right" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1.5"
                            android:gravity="right"
                            android:padding="7dp"
                            android:singleLine="true"
                            android:text="@string/xcjg"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/larger_txtsize18" />

                        <EditText
                            android:id="@+id/swdyx_rcgl_xcjg_edit"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="3"
                            android:background="@drawable/background_edittxt"
                            android:hint=""
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textSize="@dimen/larger_txtsize16" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <LinearLayout
                        android:id="@+id/llinear1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="right" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1.5"
                            android:gravity="right"
                            android:padding="7dp"
                            android:singleLine="true"
                            android:text="@string/xcbm"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/larger_txtsize18" />

                        <EditText
                            android:id="@+id/swdyx_rcgl_xcbm_edit"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="3"
                            android:background="@drawable/background_edittxt"
                            android:hint=""
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textSize="@dimen/larger_txtsize16" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llinear2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/llinear1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:gravity="right" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1.5"
                            android:gravity="right"
                            android:padding="7dp"
                            android:singleLine="true"
                            android:text="@string/xcsj"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/larger_txtsize18" />

                        <Button
                            android:id="@+id/swdyx_rcgl_xctime_edit"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="3"
                            android:background="@drawable/background_edittxt"
                            android:gravity="left|center_vertical"
                            android:hint=""
                            android:padding="8dp"
                            android:singleLine="true"
                            android:textSize="@dimen/larger_txtsize16" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llinear3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/llinear2"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:gravity="right" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1.5"
                            android:gravity="right"
                            android:padding="7dp"
                            android:singleLine="true"
                            android:text="@string/cdcls"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/larger_txtsize18" />

                        <EditText
                            android:id="@+id/swdyx_rcgl_cdcls_edit"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="3"
                            android:background="@drawable/background_edittxt"
                            android:hint=""
                            android:inputType="number"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textSize="@dimen/larger_txtsize16" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llinear4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/llinear3"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:gravity="right" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1.5"
                            android:gravity="right"
                            android:padding="7dp"
                            android:singleLine="true"
                            android:text="@string/bxcr"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/larger_txtsize18" />

                        <EditText
                            android:id="@+id/swdyx_rcgl_bxcr_edit"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="3"
                            android:background="@drawable/background_edittxt"
                            android:hint=""
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textSize="@dimen/larger_txtsize16" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llinear5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/llinear4"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:gravity="right|center"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1.5"
                            android:gravity="right|center"
                            android:padding="7dp"
                            android:singleLine="true"
                            android:text="@string/wd"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/larger_txtsize18" />

                        <EditText
                            android:id="@+id/swdyx_rcgl_lat_edit"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="3"
                            android:background="@drawable/background_edittxt"
                            android:hint=""
                            android:inputType="numberDecimal"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textSize="@dimen/larger_txtsize16" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llinear6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/llinear5"
                        android:layout_marginTop="15dp"
                        android:gravity="right|center"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1.5"
                            android:gravity="right|center"
                            android:padding="7dp"
                            android:singleLine="true"
                            android:text="@string/sfywfxw"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/larger_txtsize18" />

                        <CheckBox
                            android:id="@+id/swdyx_rcgl_sfywfxw_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight="2.5"
                            android:hint=""
                            android:padding="5dp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.5"
                    android:gravity="right"
                    android:padding="7dp"
                    android:singleLine="true"
                    android:text="@string/bz"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/larger_txtsize18" />

                <EditText
                    android:id="@+id/swdyx_rcgl_bz_edit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="7.5"
                    android:background="@drawable/background_edittxt"
                    android:gravity="top"
                    android:hint=""
                    android:minLines="2"
                    android:padding="5dp"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/background_view_rounded_blue"
                android:gravity="center" >

                <Button
                    android:id="@+id/swdyx_rcgl_save_edit"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/background_view_button"
                    android:padding="10dp"
                    android:text="@string/sure"
                    android:textColor="@color/white"
                    android:textSize="@dimen/larger_txtsize18" />

                <Button
                    android:id="@+id/swdyx_rcgl_cancle_edit"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/background_view_button"
                    android:padding="10dp"
                    android:text="@string/cancle"
                    android:textColor="@color/white"
                    android:textSize="@dimen/larger_txtsize18" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>