<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_view_rounded_blue"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center"
            android:paddingLeft="8dp"
            android:text="@string/xbatrbutinfo"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/attributeclose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/background_view_rounded_image"
            android:contentDescription="@null"
            android:padding="8dp"
            android:src="@drawable/close" />
    </LinearLayout>

    <ListView
        android:id="@+id/attribute_listview"
        android:layout_width="240dp"
        android:layout_height="400dp"
        android:layout_marginLeft="0.5dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:cacheColorHint="#00000000" >
    </ListView>

</LinearLayout>