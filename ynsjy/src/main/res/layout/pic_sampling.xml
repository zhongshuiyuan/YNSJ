<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/blue_btn_select"
            android:padding="10dp"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="采样图片"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <Button
            android:id="@+id/pic_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/blue_btn_select"
            android:padding="10dp"
            android:text="拍照采样"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:visibility="gone"/>
    </LinearLayout>

    <GridView
        android:id="@+id/pic_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:columnWidth="300dp"
        android:gravity="center"
        android:horizontalSpacing="3dp"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp" />

    <LinearLayout
        android:id="@+id/pic_samp_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/blue_btn_select"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pic_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="取消全选"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/pic_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="全选"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/pic_del"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

</FrameLayout>
