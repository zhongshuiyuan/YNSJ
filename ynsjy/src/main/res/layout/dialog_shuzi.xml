<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:padding="5dp" >

        <TextView
            android:id="@+id/headtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="样方情况说明"
            android:textColor="#ffffff"
            android:textSize="@dimen/larger_txtsize22" />

        <Button
            android:id="@+id/back"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_view_button"
            android:padding="10dp"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="@dimen/larger_txtsize18" />

        <Button
            android:id="@+id/wancheng"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_view_button"
            android:padding="10dp"
            android:text="@string/wancheng"
            android:textColor="@color/white"
            android:textSize="@dimen/larger_txtsize18" />
    </RelativeLayout>

    <EditText
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/background_edittxt"
        android:minLines="2"
        android:padding="5dp"
        android:textColor="#000000"
        android:focusable="false"
        android:hint=""
        android:textSize="@dimen/larger_txtsize20" >
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/sz1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_view_rounded_lightblue"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="1"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/larger_txtsize22" />

                    <TextView
                        android:id="@+id/sz2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_view_rounded_lightblue"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="2"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/larger_txtsize22" />

                    <TextView
                        android:id="@+id/sz3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_view_rounded_lightblue"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="3"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/larger_txtsize22" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/sz4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_view_rounded_lightblue"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="4"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/larger_txtsize22" />

                    <TextView
                        android:id="@+id/sz5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_view_rounded_lightblue"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="5"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/larger_txtsize22" />

                    <TextView
                        android:id="@+id/sz6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_view_rounded_lightblue"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="6"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/larger_txtsize22" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/szx"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@drawable/background_view_rounded_lightblue"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="x"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/larger_txtsize22" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/sz7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_view_rounded_lightblue"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="7"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/larger_txtsize22" />

                    <TextView
                        android:id="@+id/sz8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_view_rounded_lightblue"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="8"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/larger_txtsize22" />

                    <TextView
                        android:id="@+id/sz9"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_view_rounded_lightblue"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="9"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/larger_txtsize22" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/szdian"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_view_rounded_lightblue"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="."
                        android:textColor="#ffffff"
                        android:textSize="@dimen/larger_txtsize22" />

                    <TextView
                        android:id="@+id/sz0"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_view_rounded_lightblue"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="0"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/larger_txtsize22" />

                    <TextView
                        android:id="@+id/szjia"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_view_rounded_lightblue"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="+/-"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/larger_txtsize22" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/szqk"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@drawable/background_view_rounded_lightblue"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="C"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/larger_txtsize22" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>