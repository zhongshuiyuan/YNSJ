<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_view_rounded"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:gravity="center" >

        <TextView
            android:id="@+id/swdyx_jhz_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/editsavestationinfo"
            android:textColor="#ffffff"
            android:textSize="@dimen/larger_txtsize22" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:baselineAligned="false" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <LinearLayout
                        android:id="@+id/linear1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1.5"
                            android:gravity="right"
                            android:padding="7dp"
                            android:singleLine="true"
                            android:text="@string/jzzm1"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/larger_txtsize18" />

                        <EditText
                            android:id="@+id/swdyx_jhz_jhzm"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="3"
                            android:singleLine="true"
                            android:background="@drawable/background_edittxt"
                            android:hint=""
                            android:padding="5dp"
                            android:textColor="@color/balck"
                            android:textSize="@dimen/larger_txtsize16" >

                            <requestFocus />
                        </EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/linear1"
                        android:layout_marginTop="15dp"
                        android:gravity="right" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1.5"
                            android:singleLine="true"
                            android:gravity="right"
                            android:padding="7dp"
                            android:text="@string/qywz"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/larger_txtsize18" />

                        <Spinner
                            android:id="@+id/swdyx_jhz_qywz"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="3"
                            android:singleLine="true"
                            android:background="@drawable/background_edittxt" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/linear2"
                        android:layout_marginTop="15dp"
                        android:gravity="right" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1.5"
                            android:gravity="right"
                            android:padding="7dp"
                            android:text="@string/lat"
                            android:singleLine="true"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/larger_txtsize18" />

                        <EditText
                            android:id="@+id/swdyx_jhz_wd"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:singleLine="true"
                            android:layout_marginRight="5dp"
                            android:layout_weight="3"
                            android:background="@drawable/background_edittxt"
                            android:hint=""
                            android:inputType="numberDecimal"
                            android:padding="5dp"
                            android:textColor="@color/balck"
                            android:textSize="@dimen/larger_txtsize16" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/linear3"
                        android:layout_marginTop="15dp"
                        android:gravity="right" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1.5"
                            android:gravity="right"
                            android:padding="7dp"
                            android:singleLine="true"
                            android:text="@string/lxdh"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/larger_txtsize18" />

                        <EditText
                            android:id="@+id/swdyx_jhz_lxdh"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:singleLine="true"
                            android:layout_weight="3"
                            android:background="@drawable/background_edittxt"
                            android:hint=""
                            android:inputType="phone"
                            android:padding="5dp"
                            android:textColor="@color/balck"
                            android:textSize="@dimen/larger_txtsize16" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <LinearLayout
                        android:id="@+id/llinear1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="right" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1.5"
                            android:gravity="right"
                            android:padding="7dp"
                            android:singleLine="true"
                            android:text="@string/glry"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/larger_txtsize18" />

                        <EditText
                            android:id="@+id/swdyx_jhz_glry"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="20dp"
                            android:singleLine="true"
                            android:layout_weight="3"
                            android:background="@drawable/background_edittxt"
                            android:hint=""
                            android:padding="5dp"
                            android:textColor="@color/balck"
                            android:textSize="@dimen/larger_txtsize16" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llinear2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/llinear1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:gravity="right" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1.5"
                            android:gravity="right"
                            android:singleLine="true"
                            android:padding="7dp"
                            android:text="@string/detailaddress1"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/larger_txtsize18" />

                        <EditText
                            android:id="@+id/swdyx_jhz_xxdz"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="20dp"
                            android:singleLine="true"
                            android:layout_weight="3"
                            android:background="@drawable/background_edittxt"
                            android:hint=""
                            android:padding="5dp"
                            android:textColor="@color/balck"
                            android:textSize="@dimen/larger_txtsize16" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llinear3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/llinear2"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:gravity="right" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1.5"
                            android:gravity="right"
                            android:padding="7dp"
                            android:text="@string/lon"
                            android:singleLine="true"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/larger_txtsize18" />

                        <EditText
                            android:id="@+id/swdyx_jhz_jd"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="20dp"
                            android:singleLine="true"
                            android:layout_weight="3"
                            android:background="@drawable/background_edittxt"
                            android:hint=""
                            android:inputType="numberDecimal"
                            android:padding="5dp"
                            android:textColor="@color/balck"
                            android:textSize="@dimen/larger_txtsize16" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.5"
                    android:gravity="right"
                    android:padding="7dp"
                    android:singleLine="true"
                    android:text="@string/jztj"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/larger_txtsize18" />

                <EditText
                    android:id="@+id/swdyx_jhz_jztj"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:singleLine="true"
                    android:layout_weight="7.5"
                    android:background="@drawable/background_edittxt"
                    android:gravity="top"
                    android:hint=""
                    android:minLines="2"
                    android:padding="5dp"
                    android:textColor="@color/balck"
                    android:textSize="@dimen/larger_txtsize16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.5"
                    android:gravity="right"
                    android:padding="7dp"
                    android:singleLine="true"
                    android:text="@string/bz"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/larger_txtsize18" />

                <EditText
                    android:id="@+id/swdyx_jhz_bz"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:layout_marginRight="20dp"
                    android:layout_weight="7.5"
                    android:background="@drawable/background_edittxt"
                    android:gravity="top"
                    android:hint=""
                    android:minLines="2"
                    android:padding="5dp"
                    android:textColor="@color/balck"
                    android:textSize="@dimen/larger_txtsize16" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/background_view_rounded_blue"
                android:gravity="center" >

                <Button
                    android:id="@+id/swdyx_jhz_save"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/background_view_button"
                    android:padding="10dp"
                    android:text="@string/bc"
                    android:textColor="@color/white"
                    android:textSize="@dimen/larger_txtsize18" />

                <Button
                    android:id="@+id/swdyx_jhz_cancle"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/background_view_button"
                    android:padding="10dp"
                    android:text="@string/cancle"
                    android:textColor="@color/white"
                    android:textSize="@dimen/larger_txtsize18" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>