<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <com.titan.ynsjy.statistics.InterceptScrollContainer
        android:id="@+id/scroollContainter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:focusable="false" >

        <com.titan.ynsjy.statistics.MyHScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView1"
                    style="@style/textTheme"
                    android:text="统计单位"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView2"
                    style="@style/textTheme"
                    android:text="林地权属"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView3"
                    style="@style/textTheme"
                    android:text="森林类别"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView4"
                    style="@style/textTheme"
                    android:text="总面积"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <include
                    layout="@layout/ld_head_middle" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_bg"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="非林业用地"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#ff747474" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/textView5"
                            style="@style/textTheme"
                            android:text="合计"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/textView6"
                            style="@style/textTheme"
                            android:text="有林地"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/text_bg"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="灌木林地"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#ff747474" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/textView7"
                                    style="@style/textTheme_100"
                                    android:text="小计"
                                    android:textAppearance="?android:attr/textAppearanceMedium" />

                                <TextView
                                    android:id="@+id/textView8"
                                    style="@style/textTheme_100"
                                    android:layout_height="fill_parent"
                                    android:text="国家特别规定灌木林地"
                                    android:textAppearance="?android:attr/textAppearanceMedium" />

                                <TextView
                                    android:id="@+id/textView9"
                                    style="@style/textTheme_100"
                                    android:text="其它灌木林地"
                                    android:textAppearance="?android:attr/textAppearanceMedium" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.titan.ynsjy.statistics.MyHScrollView>
    </com.titan.ynsjy.statistics.InterceptScrollContainer>

</RelativeLayout>