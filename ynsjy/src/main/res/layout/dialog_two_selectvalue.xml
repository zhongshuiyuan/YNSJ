<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/background_view_rounded_blue"
        android:gravity="center" >

        <TextView
            android:id="@+id/textView_two_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="15dp"
            android:background="@drawable/background_view_rounded_lightblue"
            android:gravity="center"
            android:padding="10dp"
            android:paddingLeft="5dp"
            android:text="@string/back"
            android:textColor="@android:color/white"
            android:textSize="@dimen/larger_txtsize20" />

        <TextView
            android:id="@+id/textView_two_alias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="10dp"
            android:layout_margin="15dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/larger_txtsize20" />

        <TextView
            android:id="@+id/textView_two_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:background="@drawable/background_view_rounded_lightblue"
            android:gravity="center"
            android:padding="10dp"
            android:paddingLeft="5dp"
            android:text="@string/sure"
            android:textColor="@android:color/white"
            android:textSize="@dimen/larger_txtsize20" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_view_rounded"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            android:text="" />

        <EditText
            android:id="@+id/edittxt_input_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/background_edittxt"
            android:gravity="bottom"
            android:padding="15dp" />
    </LinearLayout>

    <ListView
        android:id="@+id/listView_two_selectvalue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_view_rounded"
        android:visibility="visible" >
    </ListView>

</LinearLayout>