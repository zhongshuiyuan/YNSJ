                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="#DCDCDC"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/balck"
                android:textSize="@dimen/larger_txtsize20" />
