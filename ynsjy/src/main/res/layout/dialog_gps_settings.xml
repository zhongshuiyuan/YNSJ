<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_view_rounded"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/background_view_rounded_blue"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_two_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="true"
            android:padding="10dp"
            android:paddingLeft="5dp"
            android:text="@string/gpssetting"
            android:textColor="@android:color/white"
            android:textSize="@dimen/larger_txtsize20" />

        <ImageView
            android:id="@+id/textView_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_view_rounded_image"
            android:contentDescription="@null"
            android:gravity="center"
            android:padding="10dp"
            android:paddingLeft="5dp"
            android:src="@drawable/close"
            android:text="@string/gpssetting"
            android:textColor="@android:color/white"
            android:textSize="@dimen/larger_txtsize20" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/background_view_rounded"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_linearlayout"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="选择区县"
                    android:textSize="@dimen/larger_txtsize22" />

                <Spinner
                    android:id="@+id/edittxt_selqx"
                    style="@style/spinner_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp"
                    android:text="@string/gps_dx"
                    android:textSize="@dimen/larger_txtsize22" />

                <EditText
                    android:id="@+id/edittxt_dx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="2dp"
                    android:drawableLeft="@null"
                    android:gravity="bottom"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:padding="10dp"
                    android:textSize="@dimen/larger_txtsize18" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp"
                    android:text="@string/gps_dy"
                    android:textSize="@dimen/larger_txtsize22" />

                <EditText
                    android:id="@+id/edittxt_dy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:gravity="bottom"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:padding="10dp"
                    android:textSize="@dimen/larger_txtsize18" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp"
                    android:text="@string/gps_dz"
                    android:textSize="@dimen/larger_txtsize22" />

                <EditText
                    android:id="@+id/edittxt_dz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:gravity="bottom"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:padding="10dp"
                    android:textSize="@dimen/larger_txtsize18" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp"
                    android:text="@string/gps_da"
                    android:textSize="@dimen/larger_txtsize22" />

                <EditText
                    android:id="@+id/edittxt_da"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:enabled="false"
                    android:gravity="bottom"
                    android:hint=""
                    android:padding="10dp"
                    android:text=""
                    android:textSize="@dimen/larger_txtsize18" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp"
                    android:text="df "
                    android:textSize="@dimen/larger_txtsize22" />

                <EditText
                    android:id="@+id/edittxt_df"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    android:enabled="false"
                    android:gravity="bottom"
                    android:hint=""
                    android:inputType="numberDecimal"
                    android:padding="10dp"
                    android:text=""
                    android:textSize="@dimen/larger_txtsize18" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/background_view_rounded_blue"
                android:gravity="center">

                <TextView
                    android:id="@+id/gpssettings_sure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="8dp"
                    android:background="@drawable/background_view_rounded_lightblue"
                    android:gravity="center"
                    android:padding="10dp"
                    android:paddingLeft="5dp"
                    android:text="@string/sure"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/larger_txtsize20" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>