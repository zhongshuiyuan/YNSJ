<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <com.titan.ynsjy.statistics.InterceptScrollContainer
        android:id="@+id/scroollContainter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:focusable="false" >

        <com.titan.ynsjy.statistics.MyHScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView1"
                    style="@style/textTheme"
                    android:text="案件编号"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView2"
                    style="@style/textTheme"
                    android:text="案件名称"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView3"
                    style="@style/textTheme"
                    android:text="项目类别"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView4"
                    style="@style/textTheme"
                    android:text="违法使用林地责任单位（责任人）名称（姓名）"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView5"
                    style="@style/textTheme"
                    android:text="责任单位法定代表人姓名"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView6"
                    style="@style/textTheme"
                    android:text="涉及本次核实的疑似图斑编号"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView7"
                    style="@style/textTheme"
                    android:text="涉及林地落界小班号"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView8"
                    style="@style/textTheme"
                    android:text="开工日期"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView9"
                    style="@style/textTheme"
                    android:text="违法使用林地面积（公顷）"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView10"
                    style="@style/textTheme"
                    android:text="违法使用林地地类"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView11"
                    style="@style/textTheme"
                    android:text="违法使用林地的森林类别"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView12"
                    style="@style/textTheme"
                    android:text="违法使用林地类型"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView13"
                    style="@style/textTheme"
                    android:text="违法使用林地的行为类型"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView14"
                    style="@style/textTheme"
                    android:text="违法使用林地行为的查处情况"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView15"
                    style="@style/textTheme"
                    android:text="违法使用林地行为的依法处理情况及查处依据"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView16"
                    style="@style/textTheme"
                    android:text="案件性质"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView17"
                    style="@style/textTheme"
                    android:text="有无无证采伐"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView18"
                    style="@style/textTheme"
                    android:text="无证采伐面积(公顷）"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView19"
                    style="@style/textTheme"
                    android:text="无证采伐蓄积（m3）"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView20"
                    style="@style/textTheme"
                    android:text="无证采伐林木的查处情况"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView21"
                    style="@style/textTheme"
                    android:text="督办级别"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView22"
                    style="@style/textTheme"
                    android:text="备注"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>
        </com.titan.ynsjy.statistics.MyHScrollView>
    </com.titan.ynsjy.statistics.InterceptScrollContainer>

</RelativeLayout>